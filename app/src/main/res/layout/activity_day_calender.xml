<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DayCalenderActivity">

    <EditText
        android:id="@+id/editNumberEndHour"
        android:layout_width="70dp"
        android:layout_height="80dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="272dp"
        android:ems="10"
        android:inputType="number"
        android:textSize="50sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewStart" />

    <EditText
        android:id="@+id/editTextSchedule"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="予定を入力してください"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/buttonSave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="664dp"
        android:layout_marginEnd="16dp"
        android:text="保存"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/editTextSchedule" />

    <EditText
        android:id="@+id/editNumberStartHour"
        android:layout_width="70dp"
        android:layout_height="80dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="44dp"
        android:ems="10"
        android:inputType="number"
        android:textSize="50sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewStart" />

    <EditText
        android:id="@+id/editNumberStartMinute"
        android:layout_width="70dp"
        android:layout_height="80dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="48dp"
        android:ems="10"
        android:inputType="number"
        android:textSize="50sp"
        app:layout_constraintStart_toEndOf="@+id/textViewStartHour"
        app:layout_constraintTop_toBottomOf="@+id/textViewStart" />

    <EditText
        android:id="@+id/editNumberEndMinute"
        android:layout_width="70dp"
        android:layout_height="80dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="272dp"
        android:ems="10"
        android:inputType="number"
        android:textSize="50sp"
        app:layout_constraintStart_toEndOf="@+id/textViewEndHour"
        app:layout_constraintTop_toBottomOf="@+id/textViewStart" />

    <TextView
        android:id="@+id/textViewStartHour"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="48dp"
        android:text="時"
        android:textSize="50sp"
        app:layout_constraintStart_toEndOf="@+id/editNumberStartHour"
        app:layout_constraintTop_toBottomOf="@+id/textViewStart" />

    <TextView
        android:id="@+id/textViewEndHour"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="280dp"
        android:text="時"
        android:textSize="50sp"
        app:layout_constraintStart_toEndOf="@+id/editNumberEndHour"
        app:layout_constraintTop_toBottomOf="@+id/textViewStart" />

    <TextView
        android:id="@+id/textViewStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="72dp"
        android:text="開始"
        android:textSize="48sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewEnd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="304dp"
        android:text="終了"
        android:textSize="48sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewStartMinute"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="56dp"
        android:text="分"
        android:textSize="50sp"
        app:layout_constraintStart_toEndOf="@+id/editNumberStartMinute"
        app:layout_constraintTop_toBottomOf="@+id/textViewStart" />

    <TextView
        android:id="@+id/textViewEndMinute"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="280dp"
        android:text="分"
        android:textSize="50sp"
        app:layout_constraintStart_toEndOf="@+id/editNumberEndMinute"
        app:layout_constraintTop_toBottomOf="@+id/textViewStart" />

    <EditText
        android:id="@+id/editTextOther"
        android:layout_width="0dp"
        android:layout_height="143dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:gravity="top|left"
        android:hint="その他"
        android:inputType="textMultiLine"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editNumberEndHour" />

</androidx.constraintlayout.widget.ConstraintLayout>